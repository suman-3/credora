# Backend Environment Variables
NODE_ENV=development
PORT=3000
MONGODB_URI=mongodb://localhost:27017/credential-passport
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# IPFS Configuration
IPFS_HOST=ipfs.infura.io
IPFS_PORT=5001
IPFS_PROJECT_ID=your_ipfs_project_id_here
IPFS_PROJECT_SECRET=your_ipfs_project_secret_here

# Logging
LOG_LEVEL=INFO

# Blockchain Environment Variables
PRIVATE_KEY=your_private_key_here
INFURA_PROJECT_ID=your_infura_project_id_here

# Network URLs
GOERLI_URL=https://goerli.infura.io/v3/${INFURA_PROJECT_ID}
SEPOLIA_URL=https://sepolia.infura.io/v3/${INFURA_PROJECT_ID}
MAINNET_URL=https://mainnet.infura.io/v3/${INFURA_PROJECT_ID}
POLYGON_URL=https://polygon-mainnet.infura.io/v3/${INFURA_PROJECT_ID}
MUMBAI_URL=https://polygon-mumbai.infura.io/v3/${INFURA_PROJECT_ID}

# API Keys for verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Gas reporting
REPORT_GAS=false

# Deployed contract addresses (update after deployment)
CREDENTIAL_REGISTRY_ADDRESS=
CREDENTIAL_NFT_ADDRESS=
VERIFICATION_CONTRACT_ADDRESS=
CREDENTIAL_FACTORY_ADDRESS=
