{
  "name": "credora-server",
  "version": "1.0.0",
  "description": "Blockchain-based credential verification system backend",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "npx prettier --write"
    ],
    "*.{ts,js}": [
      "npx eslint --fix"
    ]
  },
  "keywords": [
    "blockchain",
    "credentials",
    "nft",
    "verification",
    "ethereum",
    "smart-contracts",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.872.0",
    "@aws-sdk/s3-request-presigner": "^3.872.0",
    "@openzeppelin/contracts": "^4.9.2",
    "@truffle/hdwallet-provider": "^2.1.8",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^8.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ethers": "^6.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^6.1.5",
    "husky": "^9.1.7",
    "ioredis": "^5.7.0",
    "ipfs-http-client": "^56.0.3",
    "joi": "^17.9.1",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^16.1.5",
    "mongoose": "^7.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "prettier": "^3.6.2",
    "qrcode": "^1.5.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^7.0.1",
    "@types/qrcode": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "chai": "^4.3.7",
    "eslint": "^8.42.0",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  }
}
